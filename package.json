{
  "name": "n0str",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "start": "bun run index.ts",
    "lint": "oxlint",
    "format": "oxfmt src/ test/",
    "prepare": "bun x simple-git-hooks",
    "compile": "bun run compile:linux && bun run compile:mac && bun run compile:win",
    "compile:linux": "bun build --compile index.ts --target bun-linux-x64 --outfile n0str-linux-x64",
    "compile:mac": "bun build --compile index.ts --target bun-macos-x64 --outfile n0str-macos-x64",
    "compile:win": "bun build --compile index.ts --target bun-windows-x64 --outfile n0str-win-x64.exe"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run format && bun run lint",
    "pre-push": "bun run typecheck && bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5"
  },
  "dependencies": {
    "arktype": "^2.1.29",
    "nostr-tools": "^2.20.0"
  }
}
