{
  "name": "nostra",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "start": "bun run index.ts",
    "lint": "oxlint",
    "format": "oxfmt src/ test/",
    "prepare": "bun x simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run format && bun run lint",
    "pre-push": "bun run typecheck && bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5"
  },
  "dependencies": {
    "nostr-tools": "^2.20.0",
    "zod": "^4.3.6"
  }
}
