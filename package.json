{
  "name": "nostra",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "start": "bun run index.ts",
    "lint": "oxlint",
    "format": "oxfmt src/ test/",
    "prepare": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "bun run typecheck && bun test"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "oxfmt",
      "oxlint --fix"
    ],
    "*.{json,md}": "oxfmt"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "nostr-tools": "^2.20.0",
    "zod": "^4.3.6"
  }
}
